<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ListView android:id="@id/left" android:background="@*android:color/white" android:layout_width="0.0px" android:layout_height="fill_parent" android:layout_weight="1.0" />
    <FrameLayout android:layout_width="0.0px" android:layout_height="fill_parent" android:layout_weight="1.0">
        <ListView android:id="@id/right" android:background="@color/time_checked_left_color" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/empty" android:background="@color/time_checked_left_color" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/empty_image" />
            <TextView android:textColor="@color/time_gray_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="暂无可选时间" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>